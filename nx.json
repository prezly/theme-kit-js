{
  "tasksRunnerOptions": {
    "default": {
      "runner": "nx/tasks-runners/default",
      "options": {
        "cacheableOperations": ["build", "typecheck", "lint", "test"]
      }
    }
  },
  "targetDefaults": {
    "build": {
      "dependsOn": ["^build", "prebuild"],
      "outputs": ["{projectRoot}/build", "{projectRoot}/tsconfig.tsbuildinfo"]
    },
    "typecheck": {
      "dependsOn": ["^build"]
    },
    "test": {
      "dependsOn": ["build"],
      "outputs": ["{projectRoot}/coverage"]
    },
    "dev": {
      "dependsOn": ["^build"]
    }
  }
}
