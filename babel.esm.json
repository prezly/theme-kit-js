{
  "targets": {
    "esmodules": true,
    "node": "16"
  },
  "plugins": [
    [
      "auto-import", {
        "declarations": [
          { "default": "React", "path": "react" }
        ]
      }
    ],
    ["babel-plugin-add-import-extension", { "extension": "mjs" }]
  ],
  "presets": [
    "@babel/typescript",
    "@babel/react",
    ["@babel/env", { "modules": false }]
  ],
  "ignore": [
    "**/*.test.*",
    "**/__mocks__/*"
  ]
}
