{
  "name": "theme-kit",
  "version": "0.1.0",
  "description": "Data layer and utility library for developing Prezly themes with NextJS",
  "private": true,
  "engines": {
    "node": ">= 16.x",
    "npm": ">= 8.x"
  },
  "devEngines": {
    "node": ">= 16.x",
    "npm": ">= 8.x"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/prezly/theme-kit-nextjs.git"
  },
  "author": "Prezly Team",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/prezly/theme-kit-nextjs/issues"
  },
  "homepage": "https://github.com/prezly/theme-kit-nextjs#readme",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "build": "npm run build -w packages/theme-kit-nextjs",
    "watch": "concurrently --kill-others --names 'theme-kit-nextjs' 'npm run watch -w packages/theme-kit-nextjs'",
    "lint": "npm run lint --workspaces",
    "lint:fix": "npm run lint --workspaces -- --fix",
    "prettier": "prettier --check './packages/**/*.(js|ts|tsx)'",
    "prettier:fix": "npm run prettier -- --write --no-list-different",
    "test": "npm run test --workspaces",
    "typecheck": "npm run typecheck --workspaces",
    "check": "npm run lint --workspaces && npm run typecheck --workspaces && npm run test --workspaces",
    "release": "npm run release:prepare && npm run release:publish",
    "release:preview": "npm run release:prepare && npm run release:publish:preview",
    "release:prepare": "npm run check",
    "release:publish": "lerna publish",
    "release:publish:preview": "lerna publish --dist-tag preview --no-git-tag-version --no-push"
  },
  "dependencies": {
    "next": "^13.1.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@prezly/eslint-config": "4.4.1",
    "@types/jest": "29.5.0",
    "@types/node": "17.0.14",
    "@types/react": "18.0.31",
    "@types/react-dom": "18.0.11",
    "concurrently": "7.6.0",
    "eslint": "8.37.0",
    "jest": "29.5.0",
    "lerna": "6.6.1",
    "prettier": "2.8.7",
    "ts-jest": "29.0.5",
    "typescript": "4.9.5"
  }
}
