{
  "name": "theme-kit",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "build": "pnpm lerna run build",
    "dev:core": "pnpm lerna run dev --scope=@prezly/theme-kit-core",
    "dev:nextjs": "pnpm lerna run dev --scope=@prezly/theme-kit-nextjs",
    "dev:ui": "pnpm lerna run dev --scope=@prezly/theme-kit-ui",
    "lint": "pnpm lerna run lint",
    "lint:fix": "pnpm lint -- --fix",
    "prettier": "prettier --check './packages/**/*.(js|ts|tsx)'",
    "prettier:fix": "pnpm prettier -- --write --no-list-different",
    "test": "pnpm lerna run test",
    "typecheck": "pnpm lerna run typecheck",
    "check": "pnpm lerna run lint,typecheck,test",
    "release": "pnpm release:prepare && pnpm release:publish",
    "release:preview": "pnpm release:prepare && pnpm release:publish:preview",
    "release:prepare": "pnpm lerna run lint,test,build",
    "release:publish": "lerna publish --no-private",
    "release:publish:preview": "lerna publish prerelease --dist-tag preview"
  },
  "dependencies": {
    "next": "^13.4.12",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@playwright/test": "1.39.0",
    "@prezly/eslint-config": "4.5.0",
    "@prezly/sdk": "16.9.0",
    "@types/jest": "29.5.8",
    "@types/node": "20.9.0",
    "@types/react": "18.2.37",
    "@types/react-dom": "18.2.15",
    "concurrently": "7.6.0",
    "eslint": "8.53.0",
    "jest": "29.7.0",
    "lerna": "6.6.2",
    "prettier": "2.8.8",
    "rimraf": "5.0.5",
    "ts-jest": "29.1.1",
    "typescript": "4.9.5"
  }
}
