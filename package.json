{
  "name": "theme-kit",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "build": "NODE_ENV=production turbo run build",
    "build:dev": "NODE_ENV=development turbo run build",
    "watch": "NODE_ENV=development turbo run watch",
    "lint": "pnpm --recursive lint",
    "lint:fix": "pnpm --recursive lint --fix",
    "prettier": "prettier --check './packages/**/*.(js|ts|tsx)'",
    "prettier:fix": "pnpm prettier --write --no-list-different",
    "test": "turbo run test",
    "typecheck": "turbo run typecheck",
    "check": "turbo run lint && turbo run typecheck && turbo run test",
    "release": "pnpm release:prepare && pnpm release:publish",
    "release:preview": "pnpm release:prepare && pnpm release:publish:preview",
    "release:build": "pnpm build --force",
    "release:prepare": "pnpm run clean && pnpm install && pnpm release:build && pnpm check",
    "release:publish": "lerna publish",
    "release:publish:preview": "lerna publish prerelease --dist-tag preview",
    "clean": "pnpm clean:build && pnpm clean:node_modules",
    "clean:build": "rimraf *.tsbuildinfo && rimraf node_modules/.cache/ && pnpm --recursive run clean:build",
    "clean:node_modules": "rimraf node_modules/ pnpm-lock.yaml package-lock.json && pnpm --recursive run clean:node_modules"
  },
  "dependencies": {
    "next": "^13.1.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@playwright/test": "1.33.0",
    "@prezly/eslint-config": "4.5.0",
    "@prezly/sdk": "12.6.0",
    "@types/jest": "29.5.1",
    "@types/node": "17.0.14",
    "@types/react": "18.2.6",
    "@types/react-dom": "18.2.4",
    "concurrently": "7.6.0",
    "eslint": "8.40.0",
    "jest": "29.5.0",
    "lerna": "6.6.2",
    "prettier": "2.8.8",
    "rimraf": "5.0.1",
    "ts-jest": "29.1.0",
    "turbo": "^1.9.3",
    "typescript": "4.9.5"
  },
  "packageManager": "pnpm@8.5.0",
  "workspaces": ["packages/*"]
}
