{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "declarationDir": "./build",
    "allowJs": true,
    "jsx": "react-jsx",
    "module": "commonjs",
    "noEmit": false,
    "emitDeclarationOnly": true,
    "outDir": "./build",
    "rootDir": ".",
    "target": "esnext",
    "baseUrl": ".",
    "paths": {
      "@/components": ["src/components/"],
      "@/components/*": ["src/components/*"],
      "@/icons": ["src/icons/"],
      "@/lib": ["src/lib/"],
      "@/types": ["src/types.ts"],
      "@/hooks": ["src/hooks/"]
    }
  },
  "exclude": ["node_modules"],
  "include": ["./src", "./@types/*", "next-env.d.ts", "tailwind.config.js", "vite.config.js"]
}
