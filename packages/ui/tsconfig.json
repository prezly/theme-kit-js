{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "declarationDir": "./build",
    "allowJs": true,
    "jsx": "react-jsx",
    "module": "commonjs",
    "noEmit": false,
    "emitDeclarationOnly": true,
    "outDir": "./build",
    "rootDir": "./src/",
    "target": "esnext",
    "baseUrl": "./src/",
    "paths": {
      "@/components": ["./components/"],
      "@/components/*": ["./components/*"],
      "@/icons": ["./icons/"],
      "@/lib": ["./lib/"],
      "@/types": ["./types.ts"],
      "@/hooks": ["./hooks/"]
    }
  },
  "exclude": ["node_modules"],
  "include": ["./src", "./@types/svg.d.ts"]
}
