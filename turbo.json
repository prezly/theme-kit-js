{
  "$schema": "https://turborepo.org/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "env": ["NODE_ENV"],
      "outputs": ["build/**"],
      "inputs": ["src/**/*"]
    },
    "lint": {
      "inputs": ["src/**/*"]
    },
    "typecheck": {
      "dependsOn": ["^build"]
    },
    "watch": {
      "cache": false,
      "dependsOn": ["build"],
      "env": ["NODE_ENV"]
    },
    "test": {
      "dependsOn": ["^build"],
      "outputs": [],
      "inputs": ["src/**/*.tsx", "src/**/*.ts"]
    }
  }
}
